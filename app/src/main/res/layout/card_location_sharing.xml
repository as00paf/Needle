<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/location_sharing_card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_margin="8dp"
    app:cardElevation="2dp"
    app:popupTheme="@style/AppTheme.PopupOverlay"
    android:stateListAnimator="@drawable/create_haystack_user_card_state_list">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/location_sharing_card_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/person_placeholder"/>

        <!-- Context Menu -->

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_sharing_card_menu_button"
            android:src="@drawable/ic_action_overflow"
            android:layout_margin="8dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"/>

        <ImageView
            android:id="@+id/location_sharing_share_back_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_location_found"
            android:layout_margin="8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#CCFFFFFF"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/location_sharing_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_action_person"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:paddingBottom="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/location_sharing_time_limit_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:paddingTop="8dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_timer_black_24dp"
                android:paddingRight="5dp"
                android:textStyle="bold"
                android:paddingBottom="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>