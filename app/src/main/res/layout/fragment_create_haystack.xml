
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:context="com.nemator.needle.home.CreateHaystackFragment"
        android:padding="10dp">

        <TextView
            android:id="@+id/new_haystack_name_label"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:text="@string/name"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <EditText
            android:id="@+id/new_haystack_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_haystack_name_label"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:inputType="text"
            android:ems="10">
        </EditText>

        <TextView
            android:id="@+id/new_haystack_privacy_label"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_haystack_name"
            android:text="@string/privacy"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <CheckBox
            android:id="@+id/new_haystack_isPublic_checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_haystack_privacy_label"
            android:text="@string/isPublic"
            android:checked="false"
            android:padding="15dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/new_haystack_timeLimit_label"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_haystack_isPublic_checkBox"
            android:text="@string/timeLimit"
            android:textColor="#000000"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <!-- Date -->
        <TextView
            android:id="@+id/new_haystack_date_label"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/new_haystack_timeLimit_label"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/dateLimitText"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-01-14"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_below="@id/new_haystack_timeLimit_label"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="15dp"/>

        <ImageButton
            android:id="@+id/changeDateLimitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_haystack_timeLimit_label"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_action_edit"/>

        <!-- Time -->
        <TextView
            android:id="@+id/new_haystack_time_label"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/changeDateLimitButton"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/timeLimitText"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_below="@id/changeDateLimitButton"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="15dp"/>

        <ImageButton
            android:id="@+id/changeTimeLimitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/changeDateLimitButton"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_action_edit"/>


        <TextView
            android:id="@+id/new_haystack_users_label"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/changeTimeLimitButton"
            android:text="@string/users"
            android:textColor="#000000"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/haystack_user_list"
            android:layout_below="@id/new_haystack_users_label"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/border_ui"
            />

        <Button
            android:id="@+id/add_remove_users_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/haystack_user_list"
            android:layout_centerHorizontal="true"
            android:text="@string/addRemoveUsers"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/create_haystack_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/add_remove_users_button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:text="@string/create_haystack" />

    </RelativeLayout>
</ScrollView>