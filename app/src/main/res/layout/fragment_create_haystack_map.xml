<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/create_haystack_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.nemator.needle.home.createHaystack.CreateHaystackMap"
        android:tag="MAP_FRAGMENT"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="148dp"/>

    <FrameLayout
        android:id="@+id/create_haystack_map_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="50dp">

        <Button
            android:id="@+id/btn_draw_State"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lock Map"
            android:layout_gravity="top|left"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"/>

        <Button
            android:id="@+id/btn_polygon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[]"
            android:layout_gravity="top|right"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"/>

    </FrameLayout>

</FrameLayout>