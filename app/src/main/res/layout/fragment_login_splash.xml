<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nemator.needle.view.authentication.LoginSplashFragment"
    android:background="@color/primary">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="8"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:id="@+id/login_splash_logo"
            android:src="@drawable/pin_small"
            android:paddingBottom="32dp"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/login_splash_progress_bar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_weight="3"
            android:padding="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:id="@+id/login_splash_label"
            android:layout_weight="1"
            android:text="@string/initializing"
            android:paddingTop="32dp"/>

    </LinearLayout>

</RelativeLayout>
