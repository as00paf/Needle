<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/location_sharing_card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_margin="8dp"
    app:cardElevation="2dp"
    android:stateListAnimator="@drawable/create_haystack_user_card_state_list">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/location_sharing_card_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/person_placeholder"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#CCFFFFFF"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/location_sharing_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/location_sharing_time_limit_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:drawableRight="@drawable/ic_timer_black_24dp"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>