<resources>

    <!-- Base application theme. -->
    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <!-- remove shadow below action bar -->
        <!-- Support library compatibility -->
        <item name="elevation">0dp</item>

        <item name="actionBarStyle">@style/Theme.Needle.ActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TextAppearance.Needle.FloatLabelSmall" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/float_label</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Needle.FloatLabelMedium" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@color/float_label</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Needle.FloatLabelLarge" parent="android:TextAppearance.Large">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Theme.Needle.ActionBar" parent="style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- remove shadow below action bar -->
        <!-- <item name="android:elevation">0dp</item> -->
        <!-- Support library compatibility -->
        <item name="elevation">0dp</item>
    </style>

</resources>
